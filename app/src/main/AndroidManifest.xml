<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sheridan.jawedzak.autoedu">
    <!-- Adding Camera, Write External Storage Permission -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AutoEDU">
        <!-- Splash screen -->
        <activity android:name=".splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TutorialActivity" />
        <activity android:name=".MechanicActivity" />
        <activity android:name=".CameraActivity" />
        <activity android:name=".dashLightSymbols.SymbolDetail" />
        <activity android:name=".dashLightSymbols.SymbolFix" />
        <activity android:name=".userProfile.LoginActivity" />
        <activity android:name=".userProfile.RegistrationActivity" />
        <activity android:name=".userProfile.ForgotPasswordActivity" />
        <activity android:name=".MainActivity"></activity>
    </application>

</manifest>